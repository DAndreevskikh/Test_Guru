<% if @question.new_record? %>
  <%= form_with model: [@test, @question], local: true do |form| %>
    <%= form.label :body %>
    <%= form.text_field :body %>
    <%= form.submit 'Создать' %>
  <% end %>
<% else %>
  <%= form_with model: @question, local: true do |form| %>
    <%= form.label :body %>
    <%= form.text_field :body %>
    <%= form.submit 'Обновить' %>
  <% end %>
<% end %>
