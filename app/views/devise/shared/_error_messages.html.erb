<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert" data-turbo-cache="false">
    <h2><%= t('.header', count: resource.errors.count) %>:</h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
