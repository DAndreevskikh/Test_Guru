<table>
  <tr>
    <th>Вопрос</th>
    <th>Gist URL</th>
    <th>Пользователь</th>
  </tr>
  <% @gists.each do |gist| %>
    <tr>
      <td><%= link_to gist.question.body.truncate(25), admin_question_path(gist.question) %></td>
      <td><%= link_to gist.url, gist.url, target: '_blank' %></td>
      <td><%= gist.user.email %></td>
    </tr>
  <% end %>
</table>
